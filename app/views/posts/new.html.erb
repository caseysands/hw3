<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "Title" %>
    <%= form.text_field "title" %>
    <%= form.label "Today's Date" %>
    <%= form.date_field "posted_on" %>
  </p>
  <p>
    <%= form.label "Description" %>
    <%= form.text_field "description" %>
    
  </p>
  
  <%= form.hidden_field "place_id" %>
  <%= form.submit %>
<% end %>